<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trambleo.Controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Modifier mon adresse e-mail" />
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label text="Ancienne adresse e-mail :" />
         <TextField promptText="Entrez votre ancienne adresse e-mail" />
         <Label text="Nouvelle adresse e-mail :" />
         <TextField promptText="Entrez votre nouvelle adresse e-mail" />
         <Label text="Confirmer  nouvelle adresse e-mail :" />
         <TextField promptText="Entrez votre nouvelle adresse e-mail" />
      </children>
   </VBox>
    <Button onAction="#onHelloButtonClick" text="Valider" />
</VBox>
