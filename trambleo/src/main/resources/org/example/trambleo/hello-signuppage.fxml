<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" style="-fx-background-color: #E9EFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trambleo.HelloControllerSignUp">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="TOP_CENTER" text="Bienvenue sur Trambleo !">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
   <Label text="Créer un compte  :">
      <font>
         <Font size="16.0" />
      </font>
   </Label>
   <VBox prefHeight="414.0" prefWidth="262.0">
      <children>
         <Label text="Nom :" />
         <TextField fx:id="nomCompte" maxWidth="500.0" promptText="Entrez votre nom" />
         <Label text="Prénom :">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Label>
         <TextField fx:id="prenomCompte" maxWidth="500.0" promptText="Entrez votre prénom" />
         <Label text="Adresse Email :">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Label>
         <TextField fx:id="emailCompte" maxWidth="500.0" promptText="Entrez votre e-mail" />
         <Label text="Mot de passe :">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Label>
         <TextField fx:id="passwordCompte" maxWidth="500.0" promptText="Entrez votre mot de passe" />
         <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="1240.0">
            <children>
               <Label text="Déjà connecté ?" />
               <Button mnemonicParsing="false" onMouseClicked="#onBoutonConnecter" style="-fx-background-color: #847CAE;" text="Se connecter">
                  <HBox.margin>
                     <Insets left="15.0" />
                  </HBox.margin></Button>
            </children>
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
         </HBox>
         <Label fx:id="messageConfirmation" prefHeight="62.0" prefWidth="234.0" style="-fx-text-fill: #FF0000;" />
      </children>
   </VBox>
   <Button mnemonicParsing="false" onMouseClicked="#onBoutonCreer" style="-fx-background-color: #847CAE;" text="Créer un compte" />
</VBox>
