<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trambleo.HelloControllerSignUp">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="TOP_CENTER" text="Bienvenue sur Trambleo !">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
   <Label text="Créer un compte  :">
      <font>
         <Font size="16.0" />
      </font>
   </Label>
   <VBox prefHeight="414.0" prefWidth="262.0">
      <children>
         <Label text="Nom :" />
         <TextField fx:id="nomCompte" promptText="Entrez votre nom" />
         <Label text="Prénom :" />
         <TextField fx:id="prenomCompte" promptText="Entrez votre prénom" />
         <Label text="Adresse Email :" />
         <TextField fx:id="emailCompte" promptText="Entrez votre e-mail" />
         <Label text="Mot de passe :" />
         <TextField fx:id="passwordCompte" promptText="Entrez votre mot de passe" />
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Déjà connecté ?" />
               <Button mnemonicParsing="false" onMouseClicked="#onBoutonConnecter" text="Se connecter" />
            </children>
         </HBox>
      </children>
   </VBox>
   <Button mnemonicParsing="false" onMouseClicked="#onBoutonCreer" text="Créer un compte" />
</VBox>
